<UserControl x:Class="AICommandPrompt.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:prism="http://prismlibrary.com/"
             mc:Ignorable="d"
             d:DesignHeight="180" d:DesignWidth="400"> <!-- Adjusted DesignHeight -->
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- API Key Label and TextBox -->
            <RowDefinition Height="Auto"/> <!-- ErrorMessage TextBlock -->
            <RowDefinition Height="Auto"/> <!-- Buttons -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Gemini API Key:"
                   Grid.Row="0" Grid.Column="0"
                   VerticalAlignment="Center"
                   Margin="0,0,10,5"/> <!-- Added bottom margin -->
        <TextBox x:Name="ApiKeyTextBox"
                 Grid.Row="0" Grid.Column="1"
                 Text="{Binding ApiKey, UpdateSourceTrigger=PropertyChanged}"
                 VerticalAlignment="Center"
                 Margin="0,0,0,5"/> <!-- Added bottom margin -->

        <TextBlock Text="{Binding ErrorMessage}"
                   Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                   Foreground="Red"
                   TextWrapping="Wrap"
                   MinHeight="30"
                   Margin="0,5,0,10"/> <!-- Ensure space even if empty initially --> <!-- Added top/bottom margin -->

        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,5,0,0"> <!-- Adjusted top margin -->
            <Button x:Name="SaveButton"
                    Content="Save"
                    Command="{Binding SaveCommand}"
                    Width="75" Margin="0,0,10,0"/>
            <Button x:Name="CancelButton"
                    Content="Cancel"
                    Command="{Binding CancelCommand}"
                    Width="75"/>
        </StackPanel>
    </Grid>
</UserControl>
